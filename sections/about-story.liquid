<section class="section-spacing">
  <div class="page-width">
    <div class="about-block{% if section.settings.image_position == 'right' %} about-block--reversed{% endif %}">
      <div class="about-block__media">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | escape | default: section.settings.heading | escape }}"
            loading="lazy"
            decoding="async"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>

      <div class="about-block__content">
        {%- if section.settings.label != blank -%}
          <span class="about-block__label label-caps text-muted">{{ section.settings.label }}</span>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="about-block__heading h2">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="about-block__text rich-text">{{ section.settings.text }}</div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="btn btn--secondary">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About / Story",
  "tag": "section",
  "class": "about-story-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "default": "left",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "label",
      "default": "Our Story",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "A Love Letter to Books",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>We started as a tiny corner shop with a big dream: to create a space where every reader feels at home. Today, we bring that same warmth and curation to your doorstep â€” hand-picking every title, wrapping every order with care, and celebrating the joy of reading.</p>",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Learn More",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "About / Story"
    }
  ]
}
{% endschema %}
