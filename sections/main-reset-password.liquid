<section class="section-spacing">
  <div class="page-width">
    <div class="customer">
      <h1 class="customer__title h1">{{ 'customer.reset_password.title' | t }}</h1>

      <div class="customer__form">
        {%- form 'reset_customer_password' -%}
          {%- if form.errors -%}
            <div class="form-error mb-md">{{ form.errors | default_errors }}</div>
          {%- endif -%}

          <div class="form-field">
            <label class="form-label" for="reset-password">{{ 'customer.reset_password.password' | t }}</label>
            <input class="form-input" type="password" id="reset-password" name="customer[password]" autocomplete="new-password" required>
          </div>

          <div class="form-field">
            <label class="form-label" for="reset-password-confirm">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input class="form-input" type="password" id="reset-password-confirm" name="customer[password_confirmation]" autocomplete="new-password" required>
          </div>

          <button type="submit" class="btn btn--primary btn--full">{{ 'customer.reset_password.submit' | t }}</button>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reset password",
  "tag": "section",
  "class": "main-reset-password-section",
  "settings": []
}
{% endschema %}
