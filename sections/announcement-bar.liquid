{%- if section.settings.text != blank -%}
  <div class="announcement-bar" role="region" aria-label="{{ 'sections.announcement_bar.name' | t }}">
    <div class="page-width">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}">{{ section.settings.text }}</a>
      {%- else -%}
        <p>{{ section.settings.text }}</p>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "tag": "section",
  "class": "announcement-bar-section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Free shipping on orders over $50 â€” Welcome to our bookshop!",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}
