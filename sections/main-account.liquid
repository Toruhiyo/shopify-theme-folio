<section class="section-spacing">
  <div class="page-width">
    <div class="customer" style="max-width: 900px;">
      <h1 class="customer__title h1">{{ 'customer.account.title' | t }}</h1>

      <div class="flex justify-between items-center mb-lg" style="flex-wrap: wrap; gap: 1rem;">
        <h2 class="h3">{{ 'customer.account.orders' | t }}</h2>
        <a href="{{ routes.account_logout_url }}" class="btn btn--ghost btn--small">{{ 'customer.account.logout' | t }}</a>
      </div>

      {%- if customer.orders.size > 0 -%}
        <div class="customer__orders">
          <table>
            <thead>
              <tr>
                <th>Order</th>
                <th>Date</th>
                <th>Payment</th>
                <th>Fulfillment</th>
                <th class="text-right">Total</th>
              </tr>
            </thead>
            <tbody>
              {%- for order in customer.orders -%}
                <tr>
                  <td><a href="{{ order.customer_url }}">{{ order.name }}</a></td>
                  <td>{{ order.created_at | date: '%B %d, %Y' }}</td>
                  <td>{{ order.financial_status_label }}</td>
                  <td>{{ order.fulfillment_status_label }}</td>
                  <td class="text-right">{{ order.total_price | money }}</td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        </div>
      {%- else -%}
        <p class="text-muted">{{ 'customer.account.no_orders' | t }}</p>
      {%- endif -%}

      <div class="mt-xl">
        <h2 class="h3 mb-md">{{ 'customer.account.details' | t }}</h2>
        <p>{{ customer.name }}</p>
        <p class="text-muted">{{ customer.email }}</p>

        {%- if customer.default_address -%}
          <div class="mt-md">
            <p>{{ customer.default_address | format_address }}</p>
          </div>
        {%- endif -%}

        <a href="{{ routes.account_addresses_url }}" class="btn btn--secondary btn--small mt-md">
          {{ 'customer.account.view_addresses' | t }}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Account",
  "tag": "section",
  "class": "main-account-section",
  "settings": []
}
{% endschema %}
